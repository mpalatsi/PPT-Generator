{
    "python": {
        "formatter": "black",
        "lineLength": 88,
        "linting": {
            "enabled": true,
            "pylint": true,
            "flake8": true,
            "mypy": true
        },
        "testing": {
            "framework": "pytest",
            "coverage": {
                "enabled": true,
                "minCoverage": 80
            }
        },
        "documentation": {
            "requireDocstrings": true,
            "requireTypeHints": true
        }
    },
    "editor": {
        "formatOnSave": true,
        "rulers": [88],
        "tabSize": 4,
        "insertSpaces": true,
        "trimTrailingWhitespace": true,
        "insertFinalNewline": true
    },
    "git": {
        "commitMessageFormat": "conventional",
        "branchNaming": {
            "feature": "feature/*",
            "bugfix": "bugfix/*"
        }
    },
    "security": {
        "scanOnSave": true,
        "checkDependencies": true
    },
    "design": {
        "colorPalette": {
            "primary": "#2e1a47",
            "secondary": "#a6a3e0",
            "background": "#fff",
            "usage": {
                "primary": "Main headings, important UI elements, primary actions",
                "secondary": "Secondary elements, accents, interactive components",
                "background": "Main background, cards, containers"
            }
        }
    }
} 